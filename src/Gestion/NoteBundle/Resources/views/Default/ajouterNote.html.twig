{% extends "::layoutAdmin.html.twig" %}

{% block body %}

    {{ form_start(form,{'attr':{'action':path('ajouter_note')}}) }}

    <div class="form-group">
        <label for="etudiant_nom">{{ form_label(form.classe) }}</label>
        {{ form_widget(form.classe) }}
    </div>

    <div>
        {{ form_rest(form) }}
    </div>

    {{ form_end(form) }}

    <script type="text/javascript">
        (function($) {
            $('#gestion_notebundle_note_classe').change(function(){
                var val = $(this).val();
                $.ajax({
                    type: "POST",
                    url: "{{ url('etudiant_list_ajax_call') }}?classe_id=" + val,
                    success: function(data) {
                        // Remove current options
                        $('#filieres_list').html('');
                        $.each(data, function(k, v) {
                            $('#filieres_list').append('<option value="' + v + '">' + k + '</option>');
                        });
                    }
                });
                return false;
            });
        })(jQuery);
    </script>


{% endblock %}